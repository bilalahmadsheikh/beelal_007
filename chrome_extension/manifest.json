{
    "manifest_version": 3,
    "name": "BilalAgent",
    "version": "2.0",
    "description": "Personal AI Agent â€” Browser Integration for Job Search, Content Approval, and Web Copilot",
    "permissions": [
        "activeTab",
        "cookies",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:8000/*",
        "https://*.linkedin.com/*",
        "https://*.upwork.com/*",
        "https://*.fiverr.com/*",
        "https://*.freelancer.com/*",
        "https://*.peopleperhour.com/*",
        "https://claude.ai/*",
        "https://chatgpt.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "BilalAgent v2.0"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}